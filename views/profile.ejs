

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Profile - Book Shop</title>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Poppins', sans-serif;
      background-color: #f1faee;
      margin: 0;
      padding: 20px;
      color: #1d3557;
    }

    h1, h2 {
      text-align: center;
      margin-bottom: 20px;
      animation: fadeIn 1.5s ease-in-out;
      font-size: 2em;
    }

    .section {
      margin-bottom: 40px;
    }

    .container {
      max-width: 960px;
      margin: auto;
      display: flex;
      flex-wrap: wrap;
      gap: 20px;
      justify-content: center;
      animation: slideIn 1s ease-in-out;
    }

    .card {
      background: #ffffff;
      border-radius: 10px;
      padding: 15px;
      width: 280px;
      max-width: 90%;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .card:hover {
      transform: translateY(-5px);
      box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
    }

    .card img {
      width: 100%;
      border-radius: 8px;
      height: auto;
    }

    .card p {
      margin: 10px 0;
      font-size: 16px;
    }

    .email-info {
      text-align: center;
      margin-bottom: 30px;
      font-size: 18px;
      color: #457b9d;
    }

    .profile-pic {
      position: absolute;
      top: 20px;
      right: 20px;
      width: 60px;
      height: 60px;
      border-radius: 50%;
      overflow: hidden;
      border: 3px solid #457b9d;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
      transition: transform 0.3s ease;
    }

    .profile-pic:hover {
      transform: scale(1.1);
    }

    .profile-pic img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    @keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    }

    @keyframes slideIn {
      from { transform: translateY(20px); opacity: 0; }
      to { transform: translateY(0); opacity: 1; }
    }

    @media (max-width: 600px) {
      h1, h2 {
        font-size: 1.5em;
      }

      .email-info {
        font-size: 16px;
        padding: 0 10px;
      }

      .profile-pic {
        position: static;
        margin: 0 auto 20px;
        display: block;
      }

      .container {
        flex-direction: column;
        align-items: center;
      }

      .card {
        width: 90%;
      }
    }
  </style>
</head>

<body>

  <div class="profile-pic">
    <img src="https://drive.google.com/uc?export=view&id=1Z8w7g6xEhQnMynUNxVbwhAbYDBpou-OJ" alt="Profile Picture">
  </div>

  <h1>User Profile</h1>

  <div class="email-info">Logged in as: <%= email %></div>

  <!-- User Products Section -->
  <div class="section">
    <h2>Products You've Added</h2>
    <div class="container">
      <% if (arr.length > 0) { %>
        <% arr.forEach(item => { %>
          <div class="card">
            <img src="/<%= item.image %>" alt="<%= item.title %>">
            <p><strong>Title:</strong> <%= item.title %></p>
            <p><strong>Price:</strong> ₹<%= item.price %></p>
          </div>
        <% }) %>
      <% } else { %>
        <p style="text-align:center;">No products added yet.</p>
      <% } %>
    </div>
  </div>

  <!-- Cart Section -->
  <div class="section">
    <h2>Your Cart</h2>
    <div class="container">
      <% if (cart.length > 0) { %>
        <% cart.forEach(item => { %>
          <div class="card">
            <img src="/<%= item.image %>" alt="<%= item.title %>">
            <p><strong>Title:</strong> <%= item.title %></p>
            <p><strong>Price:</strong> ₹<%= item.price %></p>
            <p><strong>Quantity:</strong> <%= item.quan %></p>
            <p><strong>Total:</strong> ₹<%= (item.price * item.quan).toFixed(2) %></p>
          </div>
        <% }) %>
      <% } else { %>
        <p style="text-align:center;">Your cart is empty.</p>
      <% } %>
    </div>
  </div>

</body>
</html>
